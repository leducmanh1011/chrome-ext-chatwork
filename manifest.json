{
  "name": "Chrome Ext chatwork",
  "description": "Building a Chrome Extension for chatwork",
  "version": "0.1.0",
  "manifest_version": 3,
  "icons": {
    "16": "./images/icon-16x16.png",
    "32": "./images/icon-32x32.png",
    "48": "./images/icon-48x48.png",
    "128": "./images/icon-128x128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "./popup.html",
    "default_icons": {
      "16": "./images/icon-16x16.png",
      "32": "./images/icon-32x32.png",
      "48": "./images/icon-48x48.png",
      "128": "./images/icon-128x128.png"
    }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
      "https://www.chatwork.com/*"
  ],
  "content_scripts": [
    {
      "js": ["jquery-3.7.0.min.js", "foreground.js"],
      "matches": ["http://chatwork.com/*"],
      "run_at": "document_idle"
    }
  ]
}
